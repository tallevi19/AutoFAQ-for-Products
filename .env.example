# Shopify App Credentials (from Partner Dashboard)
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here

# App URL (your deployed URL or ngrok tunnel during development)
SHOPIFY_APP_URL=https://your-app-url.com

# Shopify OAuth Scopes
SCOPES=read_products,write_products,read_metaobjects,write_metaobjects,read_metafield_definitions,write_metafield_definitions

# Database (SQLite for development, Postgres recommended for production)
DATABASE_URL=file:./dev.db

# Encryption key for API key storage (generate a random 32+ char string)
ENCRYPTION_KEY=change-this-to-a-random-32-char-secret-key!!
