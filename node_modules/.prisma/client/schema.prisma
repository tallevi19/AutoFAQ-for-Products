generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model ShopSettings {
  id           String   @id @default(cuid())
  shop         String   @unique
  aiProvider   String   @default("openai") // "openai" or "anthropic"
  apiKey       String // encrypted API key
  model        String   @default("gpt-4o")
  faqCount     Int      @default(5)
  autoGenerate Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model ProductFAQ {
  id          String   @id @default(cuid())
  shop        String
  productId   String
  faqs        String // JSON array of {question, answer}
  isPublished Boolean  @default(false)
  generatedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([shop, productId])
  @@index([shop])
}

model Subscription {
  id                     String    @id @default(cuid())
  shop                   String    @unique
  plan                   String    @default("free") // free | starter | growth | pro
  status                 String    @default("active") // active | cancelled | frozen | pending
  shopifyChargeId        String? // Shopify subscription GID
  shopifyConfirmationUrl String? // URL to confirm charge
  currentPeriodStart     DateTime  @default(now())
  currentPeriodEnd       DateTime?
  trialEndsAt            DateTime?
  createdAt              DateTime  @default(now())
  updatedAt              DateTime  @updatedAt

  usageRecords UsageRecord[]
}

model UsageRecord {
  id            String       @id @default(cuid())
  shop          String
  subscription  Subscription @relation(fields: [shop], references: [shop])
  type          String // "generation" | "product_faq"
  productId     String?
  billingPeriod String // "YYYY-MM" â€” reset monthly
  count         Int          @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@unique([shop, type, billingPeriod])
  @@index([shop, billingPeriod])
}
